<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectStore"
    android:background="@color/background">
    <TextView
        android:id="@+id/textView"
        android:layout_width="394dp"
        android:layout_height="55dp"
        android:layout_marginTop="44dp"
        android:text="   ยก Escoge tu tienda actual !"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/araButton"
        android:layout_width="346dp"
        android:layout_height="176dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/ara"
        android:onClick="goAra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/nikeButton"
        android:layout_width="346dp"
        android:layout_height="176dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/nike"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/araButton" />

</androidx.constraintlayout.widget.ConstraintLayout>